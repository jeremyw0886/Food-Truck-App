# === BACKEND (Node.js) ===
# Ignore everything in the backend folder *except* key files
backend/*
!backend/package.json
!backend/package-lock.json
!backend/server.js
!backend/routes/
!backend/controllers/
!backend/models/
!backend/config/
!backend/middleware/
!backend/utils/

# Ignore logs & environment variables
backend/.env
backend/node_modules/
backend/logs/
backend/*.log
backend/temp/
backend/.cache/

# === FLUTTER FRONTEND ===
# Ignore build & generated files
frontend/build/
frontend/.dart_tool/
frontend/.flutter-plugins
frontend/.flutter-plugins-dependencies
frontend/.packages
frontend/pubspec.lock
frontend/.pub-cache/
frontend/.pub/

# Ignore IDE & editor files
.vscode/
.idea/
*.iml

# Firebase config (sensitive keys)
frontend/android/app/google-services.json
frontend/ios/Runner/GoogleService-Info.plist

# === MISC ===
# Ignore OS-specific files
.DS_Store
Thumbs.db

# Ignore temporary or lock files
*.log
*.tmp
*.lock

# Ignore Firebase secret keys
backend/config/firebaseConfig.json

